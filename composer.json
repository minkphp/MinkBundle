{
    "name": "behat/mink-bundle",
    "type": "symfony-bundle",
    "description": "Mink bundle for Symfony2",
    "keywords": ["web", "test", "browser"],
    "license": "MIT",
    "authors": [
        {
            "name": "Ton Sharp",
            "email": "66ton99@gmail.com"
        },
        {
            "name": "Konstantin Kudryashov",
            "email": "ever.zet@gmail.com"
        }
    ],

    "require": {
        "php":                          ">=5.3.3",
        "behat/mink":                   ">=1.4.0",
        "symfony/framework-bundle":     "~2.2",
        "behat/mink-browserkit-driver": "1.0.*"
    },
    "require-dev": {
        "behat/mink-browserkit-driver": "1.0.*",
        "behat/mink-goutte-driver":     "1.0.*",
        "behat/mink-selenium-driver":   "1.0.*",
        "behat/mink-selenium2-driver":  "1.0.*",
        "behat/mink-zombie-driver":     "1.0.*",
        "behat/mink-sahi-driver":       "1.0.*"
    },
    "suggest": {
        "behat/mink-goutte-driver":     "fast headless driver for any app without JS emulation",
        "behat/mink-zombie-driver":     "fast and JS-enabled headless driver for any app (requires node.js)",
        "behat/mink-sahi-driver":       "slow, but JS-enabled driver for any app (requires Sahi)",
        "behat/mink-selenium-driver":   "slow, but JS-enabled driver for any app (requires Selenium1)",
        "behat/mink-selenium2-driver":  "slow, but JS-enabled driver for any app (requires Selenium2)"
    },

    "autoload": {
        "psr-0": { "Behat\\MinkBundle": "" }
    },
    "target-dir": "Behat/MinkBundle"
}
